<div class='card'>
  <div class="card__title">{{title}}</div>

  {{#if contentBlock }}
    <div class="card__content">
      {{> (resolveSlot "contentBlock") }}
    </div>
  {{/if}}

  {{#if footerBlock }}
    <div class="card__footer">
      {{> (resolveSlot "footerBlock") }}
    </div>
  {{/if}}
</div>