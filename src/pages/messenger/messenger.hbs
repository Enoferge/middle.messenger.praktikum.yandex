<section class='messenger__section messenger__section_left'>
  <div class='messenger__header'>
    <div class='messenger__header-avatar'>
      {{{Avatar}}}
    </div>
    {{{Search}}}
  </div>
  <div class='messenger__content'>
    {{{ChatList}}}
    {{{CreateNewChatButton}}}
  </div>
</section>
<section class='messenger__section messenger__section_right'>
  {{#if activeChat}}
    <div class='messenger__header'>
      <div class='messenger__header-left-part'>
        {{{ActiveChatAvatar}}}
        <span class="messenger__header-title">{{activeChat.title}}</span>
      </div>
      {{{SettingsButton}}}
    </div>
    <div class='messenger__content messenger__active-chat'>
      {{#each activeChatMessages}}
        {{{this}}}
      {{/each}}
    </div>
    <div class='messenger__footer'>
      {{{FileButton}}}
      <div class='messenger__user-msg-textarea'>{{{MessageForm}}}</div>
      {{{SendButton}}}
    </div>
  {{else}}
    <div class='messenger__empty-chat-message'>
      Choose a chat to send a message
    </div>
  {{/if}}
</section>
{{{Modal}}}
