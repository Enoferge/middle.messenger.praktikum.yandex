<div class="chat-actions">
  <button type="button" class="chat-actions__item" data-action="add">
    {{{AddIcon}}}
    <span>Add user</span>
  </button>
  <button type="button" class="chat-actions__item" data-action="remove">
    {{{RemoveIcon}}}
    <span>Remove user</span>
  </button>
  <button type="button" class="chat-actions__item" data-action="upload">
    {{{UploadIcon}}}
    <span>Change chat avatar</span>
  </button>
</div> 