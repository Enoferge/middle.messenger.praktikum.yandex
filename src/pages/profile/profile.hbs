<Button data-page="home">Back to Home</Button>

<div class="profile-card">
  <div class="profile-card__title">Profile</div>

  <div class="profile-card__content">
  
    <div class="profile-card__avatar">
      <div class="profile-card__avatar-image">
        {{> Avatar src="/assets/images/user1.png" alt="User avatar" size=160 }}
      </div>
      <div class="profile-card__avatar-actions">
        {{#ifEquals mode "CHANGE_AVATAR"}}
          {{> Button variant="plain" text="Back" page="profileRead"}}
        {{else}}
          {{> Button variant="plain" text="Change avatar" page="profileChangeAvatar"}}
          {{> Button variant="plain" text="Change password" page="profileChangePass"}}
          {{> Button variant="plain" text="Sign out" isAccent=true}}
        {{/ifEquals}}
      </div>
    </div>

    <div class="profile-card__form">
      {{#ifIn mode (array "CHANGE_AVATAR" "CHANGE_AVATAR_ERROR" "CHANGE_AVATAR_UPLOADED")}}
        <form 
          class='form' 
          id="{{formId}}"
        >
          {{> FileUpload fileData}}
        </form>
      {{else}}
        {{> Form }}
      {{/ifIn}}

      {{#ifEquals mode "READ"}}
        {{> Button class="profile-card__submit-button" name="edit" text="Edit" page="profileEdit" type="button"}}
      {{else}}
        {{> Button class="profile-card__submit-button" name="save" text="Save" page="profileRead" type="button" disabled=isFormInvalid }}
      {{/ifEquals}}
    </div>

  </div>

  <div class="profile-card__close-button">
    x
  </div>
</div>